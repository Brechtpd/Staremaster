{
  "name": "staremaster",
  "version": "0.1.0",
  "private": true,
  "description": "Electron GUI for managing git worktrees with Codex agent integration.",
  "main": "dist/main/index.js",
  "type": "module",
  "scripts": {
    "dev": "npm-run-all build:main --parallel watch:main dev:renderer start:electron",
    "dev:renderer": "vite",
    "build": "npm-run-all build:main build:renderer",
    "build:main": "rimraf dist/main dist/shared dist/tsconfig.main.tsbuildinfo && tsc -p tsconfig.main.json && node scripts/postbuild-main.cjs",
    "build:renderer": "vite build",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "npm run lint -- --fix",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "coverage": "vitest run --coverage",
    "e2e": "playwright test",
    "watch:main": "tsc -p tsconfig.main.json --watch",
    "start:electron": "cross-env NODE_ENV=development electron .",
    "prebuild": "rimraf dist"
  },
  "dependencies": {
    "chokidar": "^4.0.3",
    "diff2html": "^3.4.52",
    "electron": "^27.1.3",
    "highlight.js": "^11.11.1",
    "node-pty": "^1.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "reactflow": "^11.10.0",
    "simple-git": "^3.20.0",
    "uuid": "^9.0.1",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.0.0",
    "@types/highlight.js": "^10.1.0",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "cross-env": "^7.0.3",
    "electron-builder": "^24.6.4",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jsdom": "^22.1.0",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.40.0",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.10",
    "tslib": "^2.6.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vitest": "^1.0.4"
  },
  "engines": {
    "node": ">=18"
  }
}
